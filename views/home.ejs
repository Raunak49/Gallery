<script>
    const galleryLink = document.getElementById("gallery-link");
    galleryLink.addEventListener("click", () => {
        const token = localStorage.getItem("token");
        if (token) {
            window.location.href = `/gallery/${token}`;
        } else {
            window.location.href = "/login";
        }
    });
</script>
